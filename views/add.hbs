<div class="w-75 mx-auto">
    <p class="fs-1">Add products</p>
    {{#if errAddProduct}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> {{errAddProduct}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    <form action="/add-product" method="post">
        <div class="form-floating mb-3">
            <input type="text" required name="title" class="form-control" id="floatingInput" placeholder="Title">
            <label for="floatingInput">Title</label>
        </div>
        <div class="form-floating mb-3">
            <textarea class="form-control" required placeholder="Description" name="description" id="floatingTextarea2"
                style="height: 100px"></textarea>
            <label for="floatingTextarea2">Description</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" required name="img" class="form-control" id="floatingInput2" placeholder="Image">
            <label for="floatingInput2">Image</label>
        </div>
        <div class="input-group">
            <span class="input-group-text">$</span>
            <div class="form-floating">
                <input type="number" class="form-control" id="floatingInputGroup2" placeholder="Price" name="price"
                    required>
                <label for="floatingInputGroup2">Price</label>
            </div>
        </div>
        <button class="btn btn-primary mt-3">Add product</button>
    </form>
</div>